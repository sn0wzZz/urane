---
import { getCollection } from 'astro:content'
import Pagination from '../../../components/ui/pagination.astro'
import MainLayout from '../../../layouts/main-layout.astro'
import BlogCard from '../../../components/blog-card.astro'
import type { GetStaticPathsOptions } from 'astro'
import { POSTS_PER_PAGE } from '../../../constants'
import FieldFilter from '../../../components/field-filter.astro'

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const allPosts = await getCollection('ads')

  const postsPerPage = POSTS_PER_PAGE
  const sortedPosts = allPosts.sort(
    (a, b) =>
      new Date(b.data.publishedAt).getTime() -
      new Date(a.data.publishedAt).getTime()
  )

  return paginate(sortedPosts, { pageSize: postsPerPage })
}
const { page } = Astro.props
const { data: posts, currentPage, lastPage: totalPages } = page
---

<MainLayout title={`Ad - Page ${currentPage}`}>
  <main class='container mx-auto px-4 py-12'>
    <FieldFilter class='justify-center w-full' />

    <h1 class='text-4xl font-bold mb-8'>All ads</h1>

    <ul class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6'>
      {posts.map((post) => <BlogCard {post} content='ads' />)}
    </ul>

    <Pagination
      currentPage={currentPage}
      totalPages={totalPages}
      baseUrl='/ads'
    />
  </main>
</MainLayout>
